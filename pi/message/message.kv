
#:kivy 1.8.0

<ScreenOne>:
    name: 'First'
    id: screen1
    FloatLayout:
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: '../Blank_UI.png'
        Button:
            size: 100,100
            size_hint: None, None
            text: 'screen 1, press me to switch to screen 2, defined in python'
            on_press:
                root.manager.transition.direction = 'left'
                root.switch()
<ScreenTwo>:
    name: 'Second'
    id: screen2
    FloatLayout:
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: '../Blank_UI.png'
        Button:
            size: 100,100
            size_hint: None, None
            text: 'screen 2, press me to switch to screen 1, defined in kvlang'
            on_press:
                root.manager.transition.direction = 'right'
                root.switch()

<ScreenManagement>:
    ScreenOne:
    ScreenTwo: